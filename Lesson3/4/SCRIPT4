#!/bin/bash

# Создаем временный файл для записи команд
temp_script="rename_script.sh"

# Очищаем или создаем пустой скрипт
echo -n > "$temp_script"

# Перебираем файлы в текущей директории
for file in *; do
  # Проверяем, является ли файл файлом (не каталогом)
  if [ -f "$file" ]; then
    # Получаем новое имя файла с прописными буквами
    new_name=$(echo "$file" | tr '[:lower:]' '[:upper:]')
    
    # Создаем команду mv и записываем ее в скрипт
    echo "mv \"$file\" \"$new_name\"" >> "$temp_script"
  fi
done

# Завершаем скрипт, сообщая об успешном создании
echo "Создан скрипт для переименования файлов."
echo "Вы можете выполнить его с помощью ./rename_script.sh"

# Добавляем разрешение на выполнение созданного скрипта
chmod +x "$temp_script"

